# Server configuration
PORT=8080

# MongoDB connection string
# For Scalingo, this will be provided in the environment variables
MONGODB_URI=mongodb://localhost:27017/xeokit-models

# Scaleway Object Storage (S3-compatible) configuration
S3_ENDPOINT=https://s3.fr-par.scw.cloud
S3_ACCESS_KEY=your_scaleway_access_key
S3_SECRET_KEY=your_scaleway_secret_key
S3_BUCKET=xeokit-models

# Optional: Set to production when deploying to production
NODE_ENV=development 